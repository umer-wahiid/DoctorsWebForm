@model IEnumerable<DoctorsWebFourm.Models.Reply>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReplyText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Timestamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Query)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReplyText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Timestamp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Query.QueryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Achievements)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ReplyId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ReplyId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ReplyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
